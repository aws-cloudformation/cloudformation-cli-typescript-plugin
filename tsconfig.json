{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "noImplicitAny": true,
        "allowJs": true,
        "alwaysStrict": true,
        "declaration": true,
        "esModuleInterop": true,
        "removeComments": true,
        "sourceMap": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist"
    },
    "include": [
        "global.d.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
